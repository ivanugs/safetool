@model IEnumerable<safetool.Models.FormSubmission>

@{
    ViewData["Title"] = "Registros";
}

<div class="mb-4 d-flex gap-4 align-items-center">
    <a asp-controller="Admin" asp-action="Index">
        <img src="/images/icons/arrow-left-solid.png" alt="Arrow Icon" width="20" />
    </a>
    <h1 class="fs-5">Administración de registros de usuarios</h1>
</div>

<table class="table table-hover fs-6">
    <thead>
        <tr>
            <th scope="col">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NumberSortParm"]">Número de empleado</a>
            </th>
            <th scope="col">
                Nombre del empleado
            </th>
            <th scope="col">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["LocationSortParm"]">Localidad</a>
            </th>
            <th scope="col">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AreaSortParm"]">Áreas</a>
            </th>
            <th scope="col">
                Modelo del equipo
            </th>
            <th scope="col">
                Creado
            </th>
        </tr>
    </thead>
    <tbody class="fs-6">
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Device.Area.Location.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Device.Area.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Device.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
        </tr>
        }
    </tbody>
</table>
