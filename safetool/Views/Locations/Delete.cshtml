@model safetool.Models.Location

@{
    ViewData["Title"] = "Eliminar Localidad";
}

<h1 class="fs-5 mb-3">Administración de localidades</h1>

<h3 class="fs-5 mb-3">¿Estás seguro de que quieres eliminar este registro?</h3>
<div class="fs-63">
    <h4>Localidades</h4>
    <hr />
    <dl class="row gap-2 mb-3">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Acronym)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Acronym)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <button type="submit" value="Delete" class="btn btn-danger">Eliminar</button> |
        <a asp-action="Index">Regresar al listado</a>
    </form>
</div>
