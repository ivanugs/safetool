@model IEnumerable<safetool.Models.GeneralParameter>

@{
    ViewData["Title"] = "Parámetros Generales";
}

<style>
    a {
        color: var(--var-color-secondary)
    }

        a:hover {
            color: var(--var-color-main)
        }
</style>

<div class="mb-4 d-flex gap-4 align-items-center mb-5">
    <a asp-controller="Admin" asp-action="Index">
        <img src="/images/icons/arrow-left-solid.png" alt="Arrow Icon" width="20" />
    </a>
    <h1 class="fs-5">Administración de parámetros generales</h1>
</div>

@foreach (var item in Model)
{
    <div class="d-flex flex-row gap-5 mb-5">
        <div class="d-flex flex-column gap-5">
            <p><strong>@Html.DisplayNameFor(model => item.EmailAccount):</strong></p>
            <p><strong>@Html.DisplayNameFor(model => item.EmailAccountDisplayName):</strong></p>
            <p><strong>@Html.DisplayNameFor(model => item.EmailAccountPassword):</strong></p>
            <p><strong>@Html.DisplayNameFor(model => item.EmailAccountUser):</strong></p>
            <p><strong>@Html.DisplayNameFor(model => item.EmailPort):</strong></p>
            <p><strong>@Html.DisplayNameFor(model => item.EmailServer):</strong></p>
            <p><strong>@Html.DisplayNameFor(model => item.EmailSsl):</strong></p>
        </div>
        <div class="d-flex flex-column gap-5">
            <p>@Html.DisplayFor(modelItem => item.EmailAccount)</p>
            <p>@Html.DisplayFor(modelItem => item.EmailAccountDisplayName)</p>
            <p>@Html.DisplayFor(modelItem => item.EmailAccountPassword)</p>
            <p>@Html.DisplayFor(modelItem => item.EmailAccountUser)</p>
            <p>@Html.DisplayFor(modelItem => item.EmailPort)</p>
            <p>@Html.DisplayFor(modelItem => item.EmailServer)</p>
            <p>@Html.DisplayFor(modelItem => item.EmailSsl)</p>
        </div>
    </div>
    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
}