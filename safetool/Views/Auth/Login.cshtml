﻿@{
    ViewData["Title"] = "Inicio de sesión";
}

<style>
    body{
        background-image: url('/images/branding/Login_Background.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        height: 100vh;
    }
    span {
        color: orange;
    }

    #logo {
        width: 80px;
    }

    .main__section{
        min-height: 90vh;
        display: flex !important;
        justify-content: center;
        align-items: center;
    }

    .card{
        width: 400px;
        max-width: 450px;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.25rem var(--var-color-main);
        border: none;
    }
</style>

<div class="container d-flex justify-content-center">
    <div class="card p-4">
        <div class="card-img-top d-flex justify-content-center">
            <img id="logo" src="/images/icons/Pictogram_SafetyHealth_sRGB.png" alt="SafetyHealthPictogram" />
        </div>
        <div class="card-body">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label class="form-label fs-5" for="uid">UID:<span>*</span></label>
                    <input class="form-control" type="text" name="uid" aria-describedby="uidHelp" required />
                    <div id="uidHelp" class="form-text">Por favor, ingrese su uid.</div>
                </div>
                <div class="mb-4">
                    <label class="form-label fs-5" for="password">Contraseña:<span>*</span></label>
                    <input class="form-control" type="password" name="password" aria-describedby="passwordHelp" required />
                    <div id="passwordHelp" class="form-text">Por favor, ingrese su contraseña.</div>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-custom fs-5" type="submit">Iniciar Sesión</button>
                </div>
            </form>
        </div>
    </div>
</div>