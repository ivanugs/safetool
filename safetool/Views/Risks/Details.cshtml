@model safetool.Models.Risk

@{
    ViewData["Title"] = "Detalles";
}
<h1 class="fs-5 mb-3">Administración de riesgos</h1>

<div>
    <h4>Detalles</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10 mb-3">
            <img src="@Model.Image" alt="Imagen del riesgo" width="200" />
        </dd>
    </dl>
</div>

<div class="fs-6">
    <a asp-action="Edit" asp-route-id="@Model?.ID">Editar</a> |
    <a asp-action="Index">Regresar al listado</a>
</div>
